/* Configuration for a distribution */
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist/cjs",
    "module": "CommonJS",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true, // Link from type definition (.d.ts) to source .ts for code navigation
  },
  "include": ["src/**/*.ts"],
  "typedocOptions": {
    "entryPoints": [
      "src/ble/export.ts",
      "src/certificate/export.ts",
      "src/cluster/export.ts",
      "src/codec/export.ts",
      "src/common/export.ts",
      "src/crypto/export.ts",
      "src/datatype/export.ts",
      "src/device/export.ts",
      "src/fabric/export.ts",
      "src/log/export.ts",
      "src/math/export.ts",
      "src/mdns/export.ts",
      "src/model/export.ts",
      "src/net/export.ts",
      "src/protocol/export.ts",
      "src/protocol/interaction/export.ts",
      "src/protocol/securechannel/export.ts",
      "src/schema/export.ts",
      "src/session/export.ts",
      "src/spec/export.ts",
      "src/storage/export.ts",
      "src/time/export.ts",
      "src/tlv/export.ts",
      "src/util/export.ts",
      "src/export.ts"
    ],
    "out": "../../docs/matter.js"
  }
}
